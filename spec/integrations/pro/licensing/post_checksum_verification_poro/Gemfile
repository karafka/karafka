source 'https://rubygems.org'

KARAFKA_PRO_USERNAME = ENV.fetch('KARAFKA_PRO_USERNAME')
KARAFKA_PRO_PASSWORD = ENV.fetch('KARAFKA_PRO_PASSWORD')
