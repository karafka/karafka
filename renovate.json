{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "7 days",
  "includePaths": [
    ".ruby-version",
    "Gemfile",
    "Gemfile.lint",
    "karafka.gemspec",
    "package.json",
    ".github/workflows/**",
    "docker-compose*.yml"
  ],
  "ignorePaths": [
    "spec/integrations"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "packageRules": [
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ],
  "labels": [
    "dependencies"
  ]
}
